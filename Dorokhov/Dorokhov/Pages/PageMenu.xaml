<Page x:Class="Dorokhov.Pages.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dorokhov.Pages"
      xmlns:prop="clr-namespace:Dorokhov.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMenu">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="BtnEmployee" Content="{x:Static prop:Resources.TextEmployee}" Click="BtnEmployee_Click"></Button>
            <Button x:Name="BtnEquipment"  Content="{x:Static prop:Resources.TextEquipment}"></Button>
            <Button x:Name="BtnRepair"  Content="{x:Static prop:Resources.TextRepair}" Click="BtnRepair_Click"></Button>
            
        </StackPanel>
    </Grid>
</Page>
